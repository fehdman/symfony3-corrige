{% extends 'base.html.twig' %}

{% block body %}
    <h1>Post creation</h1>

    {{ form_start(form)}}
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 form-group">
        <label>Titre de l'article </label>
        {{ form_widget(form.title, {'attr':{'class':'form-control', 'rows':'1'}}) }}
    </div> 
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 form-group">   
        <label>Sommaire</label>
        {{ form_widget(form.summary, {'attr':{'class':'form-control', 'rows':'3'}}) }}
    </div> 
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 form-group">
         <label>Contenu</label>
        {{ form_widget(form.content, {'attr':{'class':'form-control', 'rows':'3'}}) }}
    </div>
    <div class="col-xs-12 col-sm-12 col-sm-offset-2 form-group">
         <label>Insérer une image</label>
        {{ form_widget(form.file) }}
    </div>
    <div class="col-xs-12 col-sm-12 col-sm-offset-2 form-group">
         <label>Insérer une image</label>
        {{ form_widget(form.extension) }}
    </div>
    <div class="col-xs-12 form-group">
        <input type="submit" value="Créer" class="btn btn-primary" />
    </div>
    {{ form_end(form) }}

     {#<a href="{{ path('post_index') }}">Back to the list</a>#}
{% endblock %}
