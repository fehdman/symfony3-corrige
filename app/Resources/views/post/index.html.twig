{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-sm-offset-3 col-sm-7">
        {% for flash in app.session.flashBag.get('notice') %}
            <div id="notice" class="notice alert alert-notice">
                {{ flash }}
            </div>
        {% endfor %}
        <h1>Posts list</h1>
        {% for post in posts %}
        <article>
        <div class"text-right">
            <button type="button" class="btn btn-info"><a href="{{ path('post_edit', { 'id': post.id }) }}">edit</a></button>
        </div>
            <h1 class="articleTitle"><a href="{{ path('post_show', { 'id': post.id }) }}" >{{ post.title }}</a></h1>
            <h2>{{ post.summary }}</h2>
            <p>{{ post.content }}</p>
            {% if post.extension %}
                <div class="col-sm-12 imgArticle"><img src="{{ asset('uploads/pictures/'~ post.id ~'.' ~ post.extension ) }}" height="341" width="579"/></div>
            {% else %}
                No image found for this post
            {% endif %}
           
        </article>
        {% endfor %}
        
    </div>
{% endblock %}
